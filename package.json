{
  "name": "give-your-best-webshop",
  "version": "1.0.0",
  "description": "The webshop app of Give Your Best that enables users to 'shop' for free",
  "main": "server.js",
  "scripts": {
    "build": "cd client && npm i && npm run build",
    "start:prod": "NODE_ENV=production node server.js",
    "start:dev": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "nodemon server.js",
    "start:client": "cd client && npm start",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Give-Your-Best/webshop.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Give-Your-Best/webshop/issues"
  },
  "homepage": "https://shop.giveyourbest.uk/",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bson": "^4.6.4",
    "cloudinary": "^1.40.0",
    "concurrently": "^6.2.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "express": "4.17.1",
    "express-https-redirect": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "mongodb": "^4.1.0",
    "mongoose": "^5.13.7",
    "node-mailjet": "^4.0.1",
    "prettier": "2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "nodemon": "^2.0.7"
  }
}
